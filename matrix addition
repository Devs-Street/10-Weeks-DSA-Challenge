#include <stdio.h>
#include <stdlib.h>

void getMatrixelements(int matrix[10][10],int row, int column)
{
	printf("Enter Elements\n");

	for(int i =0; i<row; i++)
	{
		for(int j=0; j<column; j++)
		{
			scanf("%d",&matrix[i][j]);
		}
	}

}


void addition(int first[][10],int second[][10],
					int result[][10],int r1,int c1,
					int r2, int c2)
{
	//Code to add two matrix
	for(int i=0; i<r1; i++)
	{
		for(int j=0; j<c2; j++)
		{
			
				result[i][j] = first[i][j] + second[i][j];
		}
	}
}

//Function to display the Matrix
void display(int result[][10], int row, int column)
{
	printf("\nResultant Matrix\n");
	for(int i=0; i<row; i++)
	{
		for(int j=0; j<column; j++)
		{
			printf("%d ",result[i][j]);
		}
		printf("\n");
	}
}
int main()
{
	int first[10][10], second[10][10], result[10][10];
	int r1, c1, r2, c2;
	printf("Enter the rows and column of the first matrix:\n");
	scanf("%d %d",&r1,&c1);
	printf("Enter the rows and column of the second matrix:\n");
	scanf("%d %d",&r2,&c2);

	//To get elements of first MAtrix
	getMatrixelements(first,r1,c1);

	//To get elements of the second Matrix
	getMatrixelements(second,r2,c2);

	//To add two matrices
	addition(first,second,result,r1,c1,r2,c2);

	//display the resultant matrix
	display(result,r1,c2);



}
